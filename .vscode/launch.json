{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
        "name": "C++ Debug (GDB)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/PhaseBasedMotionMagnification.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true, // 또는 false (원하는 대로)
        "MIMode": "gdb",
        "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",  // GDB의 정확한 경로
        "setupCommands": [
            {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
            }
        ],
        "logging": {
            "moduleLoad": true,
            "trace": true,
            "engineLogging": false
        }
        }
    ]
    
}